// https://www.typescriptlang.org/zh/tsconfig
{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "@types",
      "types/*"
    ],
    "paths": {
      "@/*": [
        ".vitepress/*"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.vue",
    ".vitepress/**/*.tsx",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
  ],
  "exclude": [
    "node_modules",
  ]
}
