{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types",
      "types/*"
    ],
    "paths": {
      "@components/*": [
        ".vitepress/components/*"
      ],
      "@config/*": [
        ".vitepress/config/*"
      ],
      "@dist/*": [
        ".vitepress/dist/*"
      ],
      "@hooks/*": [
        ".vitepress/hooks/*"
      ],
      "@icons/*": [
        ".vitepress/icons/*"
      ],
      "@layout/*": [
        ".vitepress/layout/*"
      ],
      "@plugin/*": [
        ".vitepress/plugin/*"
      ],
      "@server/*": [
        ".vitepress/server/*"
      ],
      "@styles/*": [
        ".vitepress/styles/*"
      ],
      "@theme/*": [
        ".vitepress/theme/*"
      ],
      "@/*": [
        ".vitepress/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.vue",
    ".vitepress/**/*.tsx",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    ".vitepress/.cache",
    ".vitepress/dist"
  ]
}